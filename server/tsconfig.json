{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es5",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "src": ["./src"],
      "src/*": ["./src/*"],
      "typings/*": ["./typings/*"]
    },
    "typeRoots": ["node_modules/@types", "typings"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    ".eslintrc.js"
  ],
  "exclude": [  
    "node_modules"  
  ]
}
